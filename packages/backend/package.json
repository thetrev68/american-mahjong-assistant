{
  "name": "mahjong-co-pilot-backend",
  "version": "1.0.0",
  "description": "Backend server for Mahjong Co-Pilot application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env DEBUG=socket.io:* nodemon --exec ts-node src/server.ts",
    "dev:verbose": "cross-env DEBUG=* nodemon --exec ts-node src/server.ts",
    "build": "tsc --build",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "mahjong",
    "co-pilot",
    "socket.io",
    "multiplayer"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "nodemon": "^3.1.10",
    "shared-types": "*",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "vitest": "^3.2.4"
  }
}
