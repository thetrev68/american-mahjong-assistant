{
    "workspaces": {
      ".": {
        "entry": ["scripts/*.js", "setup-test.js"]  
      },
      "packages/backend": {
        "entry": ["src/server.ts", "src/**/*.ts"],  
        "project": ["src/**/*.ts"]
      },
      "packages/frontend": {
        "entry": ["src/main.tsx", "src/**/*.tsx", "src/**/*.ts"],  
        "project": ["src/**/*.ts", "src/**/*.tsx"]
      },
      "packages/shared-types": {
        "entry": ["src/index.ts"],
        "project": ["src/**/*.ts"]
      },
      "packages/shared-utils": {
        "entry": ["src/index.ts"],
        "project": ["src/**/*.ts"]
      }
    },
    "ignore": ["**/tests/**", "**/__tests__/**"],  
    "ignoreExportsUsedInFile": true  
  }