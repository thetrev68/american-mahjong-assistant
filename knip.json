{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "scripts/*.js",
        "setup-test.js",
        "{eslint,vite,vitest,tailwind}.config.{js,ts,mjs,cjs}",
        "*.config.{js,ts,mjs,cjs}"
      ],
      "project": ["*.{js,ts,mjs,cjs}", "scripts/**/*.{js,ts}"]
    },
    "packages/backend": {
      "entry": [
        "src/features/**/*.ts",
        "src/services/**/*.ts"
      ],
      "project": ["src/**/*.ts"]
    },
    "packages/frontend": {
      "entry": [
        "src/main.tsx",
        "src/App.tsx",
        "src/features/**/*.{ts,tsx}",
        "src/hooks/**/*.{ts,tsx}",
        "src/lib/services/**/*.{ts,tsx}",
        "src/stores/**/*.{ts,tsx}",
        "src/ui-components/**/*.{ts,tsx}",
        "src/utils/**/*.{ts,tsx}"
      ],
      "project": [
        "src/**/*.{ts,tsx}",
        "public/**/*"
      ]
    },
    "packages/shared-types": {
      "project": ["src/**/*.ts"]
    },
    "packages/shared-utils": {
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": [
    "**/tests/**",
    "**/__tests__/**",
    "**/*.test.{ts,tsx,js,jsx}",
    "**/*.spec.{ts,tsx,js,jsx}",
    "**/test-utils/**",
    "**/test-setup/**",
    "**/__mocks__/**",
    "**/coverage/**",
    "**/dist/**",
    "**/build/**",
    "**/node_modules/**",
    "**/.vite/**",
    "**/.turbo/**",
    "**/legacy/**"
  ],
  "includeEntryExports": true,
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": [
    "tailwindcss"
  ]
}