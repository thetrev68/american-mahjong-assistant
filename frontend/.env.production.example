# Production Environment Configuration Template
# American Mahjong Assistant - Production Build
# Copy to .env.production and configure with actual values

# Application Configuration
VITE_APP_NAME="American Mahjong Assistant"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="production"

# Backend Configuration  
VITE_BACKEND_URL="https://api.american-mahjong-assistant.com"
VITE_WEBSOCKET_URL="wss://api.american-mahjong-assistant.com"

# Feature Flags - Production
VITE_ENABLE_MULTIPLAYER=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_DEVELOPER_TOOLS=false

# Performance Configuration
VITE_BUNDLE_ANALYZER=false
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true

# Security Configuration
VITE_ENABLE_CONTENT_SECURITY_POLICY=true
VITE_TRUST_DEV_CERT=false

# Analytics Configuration (Production) - Replace with actual IDs
VITE_GOOGLE_ANALYTICS_ID="GA-XXXXX-X"
VITE_HOTJAR_ID="XXXXXXX"
VITE_SENTRY_DSN="https://xxx@sentry.io/xxx"

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_BURST_LIMIT=20