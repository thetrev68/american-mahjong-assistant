# Development Environment Configuration Template  
# American Mahjong Assistant - Development Build
# Copy to .env.development for local development

# Application Configuration
VITE_APP_NAME="American Mahjong Assistant (Dev)"
VITE_APP_VERSION="1.0.0-dev"
VITE_APP_ENVIRONMENT="development"

# Backend Configuration (Local Development)
VITE_BACKEND_URL="http://localhost:5000"
VITE_WEBSOCKET_URL="ws://localhost:5000"

# Feature Flags - Development
VITE_ENABLE_MULTIPLAYER=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_DEVELOPER_TOOLS=true

# Development Tools
VITE_BUNDLE_ANALYZER=false
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Security Configuration (Relaxed for Development)
VITE_ENABLE_CONTENT_SECURITY_POLICY=false
VITE_TRUST_DEV_CERT=true

# Development Analytics (Disabled - leave empty)
VITE_GOOGLE_ANALYTICS_ID=""
VITE_HOTJAR_ID=""
VITE_SENTRY_DSN=""

# API Rate Limiting (Relaxed)
VITE_API_RATE_LIMIT=1000
VITE_API_BURST_LIMIT=100